@page "_Footer"
@{
    Layout = null;
}


<div class="md:px-[100px] py-[10px]">

    <div class="">
        <div class="flex justify-between mt-[35px]">
            <h1 class="font-[700] mb-[10px] text-[15px]">Overview</h1>
            <div class="flex text-[13px] items-center">
                <div class="flex text-orange items-center font-[700] text-[10px]">
                    <img src="~/Plugins/Images/ant-design_question-circle-filledquestion mark.png"
                         alt=""
                         class="w-[12px] h-[12px] mr-[2px]" />
                    <p class="mr-[5px]">Need Help?</p>
                </div>
                <div class="flex items-center">
                    <p class="text-[10px] font-[500] text-lightGrey">Log out</p>
                    <img src="~/Plugins/Images/VectorfaceRightArrow.svg"
                         alt=""
                         class="w-[7px] h-[7px] ml-[3px]" />
                </div>
            </div>
        </div>
        <div class="flex justify-between text-[13px]">
            <div class="flex items-center border border-[#CBD5E1] p-[5px] text-shrink rounded-[5px] w-[300px]">
                <img src="~/Plugins/Images/Iconsearch.png"
                     alt=""
                     class="w-[13px] h-[13px] mr-[2px]" />
                <input type="text"
                       placeholder="Search Meeting"
                       class="placeholder:text-[13px] w-full outline-none" />
            </div>
            <div class="flex items-center">
                <p class="flex-none font-semibold text-[10px]">All Locations</p>
                <img src="~/Plugins/Images/VectordownArrow.png"
                     alt=""
                     class="w-[8px] h-[5px] text-black mt-[2px] ml-[5px]" />
            </div>
        </div>
    </div>
    <!-- menu row start -->
    <div class="flex text-[10px] text-lightGrey font-[500] mt-[10px] overflow-x-auto">
        <div class="border rounded-[3px] mr-[5px] p-[7px] hover:text-orange cursor-pointer">
            My Shareholdings Dashboard
        </div>
        <div class="border rounded-[3px] mr-[5px] p-[7px] hover:text-orange hover:bg-[#FFEDD5] focus:text-orange focus:bg-[#FFEDD5] cursor-pointer">All AGM's</div>
        <div class="border rounded-[3px] mr-[5px] p-[7px] hover:text-orange hover:bg-[#FFEDD5] focus:text-orange focus:bg-[#FFEDD5] cursor-pointer">All Events</div>
        <div class="border rounded-[3px] mr-[5px] p-[7px] hover:text-orange hover:bg-[#FFEDD5] focus:text-orange focus:bg-[#FFEDD5] cursor-pointer">Trending</div>
        <div class="border rounded-[3px] mr-[5px] p-[7px]  hover:text-orange hover:bg-[#FFEDD5] focus:text-orange focus:bg-[#FFEDD5] cursor-pointer">Liked</div>
    </div>
    <!-- menu row start -->
</div>