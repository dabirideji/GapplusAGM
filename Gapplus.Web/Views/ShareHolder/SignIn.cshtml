@model Gapplus.Web.DTO.ShareHolder.LoginDto
@{
Layout=null;
}
<!DOCTYPE html>
<html lang="en" class="overflow-x-hidden">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Page</title>
    <script src="~/Plugins/Tailwind/tailwind.js"></script>
    <script src="~/Plugins/Tailwind/config.js"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Lato:ital,wght@0,100;0,300;0,400;0,700;0,900;1,100;1,300;1,400;1,700;1,900&display=swap"
          rel="stylesheet" />
</head>
<body class="font-[lato]  overflow-x-hidden bg-black" >
    
    <section class=" h-screen" style="background-image: url('Plugins/Images/Group 12design.svg');">
        @Html.Partial("_SignInHeader")
        <div class="flex  h-[85vh]   justify-center  items-center">
            <div class="bg-white w-[500px] h-[500px]  rounded-[10px] md:px-[50px] relative mx-[10px]">
                <div class="flex border border-orange p-[8px] w-[150px] absolute right-5 top-5 justify-center mb-[10px]">

                    <button class="text-[11px]  text-orange text-shrink mr-[5px]">
                        Create New Account
                    </button>
                    <img src="~/Plugins/Images/ic_round-keyboard-arrow-rightright-angle.png" class="w-[13px]" alt="">
                </div>


                <div class="flex flex-col items-center justify-center h-full mt-[30px]">
                    <div class="mb-[5px]">
                        <img src="~/Plugins/Images/Contentrainbow.png" alt="" class="w-[30px]">
                    </div>
                    <h2 class="font-extrabold text-[20px] text-shrink text-center">
                        Log in to your account
                    </h2>
                    <p class="text-[11px] text-center text-lightBlue mb-[5px]">Welcome back! Please enter your details.</p>
                    <form asp-action="Login" method="post" asp-controller="ShareHolder" class=" mt-[10px] w-full flex flex-col justify-center items-center px-[40px]">
                        <div class="mb-[10px] w-full">
                            <label for="Email" class="text-[11px] block font-[400] mb-[3px] text-[#344054] ml-[3px]">Email</label>
                            <input type=""  asp-for="Email" class="border w-full h-[40px] focus:border-orange placeholder:text-[#667085] border-[#c] rounded-[5px] px-[10px] placeholder:text-[13px] outline-none " placeholder="Enter your email">
                        </div>
                        <div class="w-full">
                            <label for="Password" class="text-[11px] text-[#344054] block font-[400] mb-[3px] ml-[3px]">Password</label>
                            <input type="password" asp-for="Password" placeholder="........" class="border w-full  h-[40px] focus:border-orange placeholder:text-[#667085] border-[#D0D5DD] rounded-[5px] px-[10px] placeholder:text-[40px] outline-none ">
                        </div>
                        <div class="flex justify-between w-full mt-[15px]">
                            <div class="flex items-center">
                                <input type="checkbox" class="mr-[3px]  text-[#D0D5DD] ml-[3px]">
                                <p class="text-[11px] font-[600] text-[#344054] ">Remember for 30 days</p>
                            </div>

                            <button class="text-[#2563EB] text-[11px] font-[600] ">Forgot password</button>
                        </div>
                        <button class="bg-gradient-to-r from-[#FF8200] to-[#FF002B]  w-full  font-medium text-white text-[13px] p-[10px] mt-[25px] " type="submit">Sign in</button>
                        <div class="flex bg-black justify-center w-full  font-medium text-white text-[13px] p-[7px] mt-[5px]">
                            <img src="~/Plugins/Images/Group 27171Sl-logo.png" alt="" class="w-[30px] mr-[10px]">
                            <button class="text-shrink">Sign in with ShareholderLive</button>
                        </div>

                        <p class="text-[12px] text-[#667085]  mt-[15px]">Don't have an account? <a href="" class="text-[#2563EB] text-semibold font-[700]">Sign up</a></p>
                    </form>
                </div>
            </div>
        </div>

    </section>

</body>
</html>