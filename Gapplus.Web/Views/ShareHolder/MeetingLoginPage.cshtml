@{
    Layout = null;
}

<html class="overflow-x-none">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Page</title>
    <script src="~/Plugins/Tailwind/tailwind.js"></script>
    <script src="~/Plugins/Tailwind/config.js"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Lato:ital,wght@0,100;0,300;0,400;0,700;0,900;1,100;1,300;1,400;1,700;1,900&display=swap"
          rel="stylesheet" />
</head>

<body class="overflow-x-none bg-black">
    @Html.Partial("_SignInHeader")
   <section>
        <div class="flex items-center h-screen  justify-center">
            <div class="bg-white w-[602px] h-[410px] rounded-[5px] relative py-[30px]">
                <div class="flex border border-transparent p-1  absolute left-2 top-5 justify-start">

                    <img src="~/Plugins/Images/back.png" class="text-[13px]  text-orange text-shrink capitalize">
                </div>


                <div class="flex flex-col items-center justify-center h-full mt-[10px]">
                    <div>
                        <img src="~/Plugins/Images/Contentrainbow.png" alt="" class="w-[30px]">
                    </div>
                    <h2 class="font-extrabold text-[24px] text-shrink text-center">
                        Enter meeting ID
                    </h2>
                    <form action="" class=" mt-[10px] w-[400px] flex flex-col justify-center items-center px-[40px]">
                        <div class="mb-[10px] w-full">
                            <label for="Email" class="text-[13px] block font-[400] mb-[3px]">Meeting ID</label>
                            <input type="" name="" id=""
                                class="border w-full h-[45px] focus:border-orange placeholder:text-[#667085] border-[#c] rounded-[5px] px-[10px] placeholder:text-[13px] outline-none "
                                placeholder="Enter your email">
                        </div>
                        <div class="w-full">
                            <label for="Password">Passcode</label class="text-[13px] block font-[400] mb-[3px]">
                            <input type="Enter your email" name="" id=" " placeholder="......"
                                class="border w-full h-[45px] focus:border-orange placeholder:text-[#667085] border-[#D0D5DD] rounded-[5px] px-[10px] placeholder:text-[40px] outline-none ">
                        </div>

                        <button
                            class="bg-gradient-to-r from-[#FF8200] to-[#FF002B]  w-full rounded-none font-medium text-white text-[13px] p-[15px] mt-[25px]">Sign
                            in</button>
                        <!-- <div
                            class="flex bg-black justify-center w-full  font-medium text-white text-[13px] p-[15px] mt-[15px]">
                            <img src="Plugins/Images/Group 27171Sl-logo.png" alt="" class="w-[30px] mr-[10px]">
                            <button>Sign in with ShareholderLive</button>
                        </div> -->

                        <!-- <p class="text-[14px] text-[667085]  mt-[15px]">Don't have an account? <a href=""
                                class="text-[#2563EB] text-semibold">Sign up</a></p> -->
                    </form>
                </div>
            </div>
        </div>
   </section>

   
</body>

</html>





